<% @movie.each do |m| %>
  <div class="item_home_frame" style="width: 220px; float: left; box-shadow: 1px 1px 1px 1px rgba(0, 0, 0, 0.5); margin-top: 15px; height: 233px;" >
    <div>
      <%= link_to detail_movie_path(m.id) , class: "item_home" do %>
        <%= image_tag m.image_url.url, class: "image_item_home" %>
        <div class="text_home_frame">
         <p><%= m.name %></p>
        </div>
      <% end %>
      <%= link_to "Xóa", movie_cart_path(id: m.id), class: "link_xoa_movie",method: :delete, data: { confirm: "Bạn chắc chắn?"} %>
    </div>
  </div>
<% end %>
